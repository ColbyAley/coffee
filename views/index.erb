<h4>Log new:</h4>

<form action='/log' method='post' id="form" class="form-horizontal">
  <div class="form-group">
    <label class="col-sm-2 control-label">Drink</label>
    <div class="col-sm-10">
      <select class="form-control" form="form" name="name">
        <% @drinks.each do |drink| %>
        <option value="<%= drink.name %>"><%= drink.name %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="col-sm-2 control-label">Size</label>
    <div class="col-sm-10">
      <select class="form-control" form="form" name="size">
        <option value="4">4oz</option>
        <option value="8">8oz</option>
        <option value="12">12oz</option>
        <option value="16">16oz</option>
        <option value="20">20oz</option>
      </select>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-success">Save</button>
    </div>
  </div>
</form>
